<%_ include partials/header _%>
	<div class="row content">

		<ul class="nav nav-pills">
			<li class="active"><a data-toggle="pill" href="#galleries">Galleries</a></li>
			<li><a data-toggle="pill" href="#infotext">Info Text</a></li>
		</ul>

		<div class="tab-content">
			<div id="galleries" class="tab-pane fade in active">
				<div class="form-container">
					<div class="inner">
						<form class="form-group gallery-settings" method="post" action="/settings/save/gallery">
							<label class="sr-only">Key</label>
							<input class="form-control details" type="text" id="key" name="key" placeholder="Key">
							<label class="sr-only">Set ID</label>
							<input class="form-control details" type="text" id="set_ID" name="set_ID" placeholder="Set ID">
							<label class="sr-only">Label</label>
							<input class="form-control details" type="text" id="label" name="label" placeholder="Label">
							<label class="sr-only">Bulk</label>
							<textarea class="form-control details" id="bulk" name="bulk" placeholder="Format per line: [Key] -- [Set ID] -- [Label]"></textarea>
							<input class="form-control submit" type="submit" value="Save new gallery">
						</form>
						<hr>
						<form class="form-group gallery-settings" method="post" action="/settings/delete/gallery">
							<label class="sr-only">Select to Delete</label>
							<select class="form-control details" id="gallery_to_delete" name="gallery_to_delete">
								<option value="Select">Select gallery</option>
								<%_ docs.galleries.forEach(gallery => { _%>
									<option value="<%= gallery._id %>"><%= gallery.label %></option>
								<%_ }) _%>
								<option value="*">--All--</option>
							</select>
							<input class="form-control submit btn-danger" type="submit" value="Delete">
						</form>
					</div>
				</div>
			</div>

			<div id="infotext" class="tab-pane fade">
				<div class="form-container">
					<div class="inner">
						<form class="form-group gallery-settings" method="post" action="/settings/save/info-text">
							<label class="sr-only">Info Text</label>
							<textarea class="form-control details" type="text" id="text" name="text" placeholder="HTML or plain text"></textarea>
							<input class="form-control submit" type="submit" value="Save">
						</form>
					</div>
				</div>
			</div>
		</div>



