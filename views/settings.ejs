<%_ include partials/header _%>
	<div class="row content">

		<ul class="nav nav-pills">
			<li class="active"><a data-toggle="pill" href="#galleries">Galleries</a></li>
			<li><a data-toggle="pill" href="#infotext">Info Text</a></li>
			<li><a data-toggle="pill" href="#designs">Designs</a></li>
		</ul>

		<div class="tab-content">
			<div id="galleries" class="tab-pane fade in active">
				<div class="form-container">
					<form class="form-group gallery-settings" method="post" action="/settings/gallery/save">
						<div class="row">
							<div class="col-sm-10 column sm">
								<div class="col-sm-4 column sm">
									<label class="sr-only">Label</label>
									<input class="form-control details" type="text" id="label" name="label" placeholder="Gallery Name" required>
								</div>
								<div class="col-sm-4 column sm">
									<label class="sr-only">Set ID</label>
									<input class="form-control details" type="text" id="set_id" name="set_id" placeholder="Set ID" required>
								</div>
								<div class="col-sm-4 column sm">
									<label class="sr-only">Tag</label>
									<input class="form-control details" type="text" id="tag" name="tag" placeholder="Tag" required>
								</div>
							</div>
							<div class="col-sm-2 column sm">
								<div class="col-sm-12">
									<label class="sr-only">Index</label>
									<select class="form-control details" id="index" name="index" required>
										<option value="">Index</option>
										<%_ docs.galleries.forEach((gallery, i) => { _%>
										<option value="<%= i %>"><%= i %></option>
										<%_ }) _%>
										<option value="<%= docs.galleries.length %>"><%= docs.galleries.length %></option>
									</select>
								</div>
							</div>
						</div>
						<label class="sr-only">Bulk</label>
						<%_ var placeholder = 'Enter above fields in exact order, separate with a " -- "'; _%>
						<textarea class="form-control details" id="bulk" name="bulk" placeholder="<%= placeholder %>"></textarea>
						<label class="sr-only">Upper Bound Index</label>
						<input type="hidden" id="max_index" name="max_index" value="<%= docs.galleries.length %>" required>
						<input class="form-control submit" type="submit" value="Save new gallery">
					</form>

					<br><br><br>

					<form class="form-group gallery-delete-settings" method="post" action="/settings/gallery/delete">
						<label class="sr-only">Select to Delete</label>
						<select class="form-control details" id="gallery_to_delete" name="gallery_to_delete" required>
							<option value="">Select gallery</option>
							<%_ docs.galleries.forEach(gallery => { _%>
							<option value="<%= gallery._id %>"><%= gallery.label %></option>
							<%_ }) _%>
							<option value="*">*</option>
						</select>
						<input class="form-control submit btn-danger" type="submit" value="Delete">
					</form>

					<br><br><br>

					<form class="form-group gallery-reorder-settings" method="post" action="/settings/gallery/reorder">
						<div class="row">
							<div class="col-sm-10 column sm">
								<label class="sr-only">Select to Re-order</label>
								<select class="form-control details" id="gallery_to_reorder" name="gallery_to_reorder" required>
									<option value="">Select gallery</option>
									<%_ docs.galleries.forEach(gallery => { _%>
									<option value="<%= gallery._id %>"><%= gallery.label %></option>
									<%_ }) _%>
								</select>
							</div>
							<div class="col-sm-2 column sm">
								<label class="sr-only">Index</label>
								<select class="form-control details" id="index" name="index" required>
									<option value="">Index</option>
									<%_ docs.galleries.forEach((gallery, i) => { _%>
									<option value="<%= i %>"><%= i %></option>
									<%_ }) _%>
								</select>
							</div>
						</div>
						<input class="form-control submit" type="submit" value="Re-order Gallery">
					</form>
				</div>
			</div>

			<div id="infotext" class="tab-pane fade">
				<div class="form-container">
					<form class="form-group info-text-settings" method="post" action="/settings/info-text/save">
						<label class="sr-only">Info Text</label>
						<pre><textarea class="form-control details" type="text" id="text" name="text" placeholder="HTML or plain text"><%= docs.info ? docs.info.text : "" %></textarea></pre>
						<input class="form-control submit" type="submit" value="Save">
					</form>
				</div>
			</div>

			<div id="designs" class="tab-pane fade">
				<div class="form-container">
					<form class="form-group design-settings" method="post" action="/settings/design/save">
						<div class="row">
							<div class="col-sm-6 column sm">
								<label class="sr-only">ID</label>
								<input class="form-control details" type="text" id="d_id" name="d_id" placeholder="ID" required>
							</div>
							<div class="col-sm-6 column sm">
								<label class="sr-only">Client</label>
								<input class="form-control details" type="text" id="client" name="client" placeholder="Client" required>
							</div>
						</div>
						<label class="sr-only">Tools</label>
						<input class="form-control details" type="text" id="tools" name="tools" placeholder="Tools" required>
						<label class="sr-only">Description</label>
						<textarea class="form-control details" type="text" id="description" name="description" placeholder="Description" required></textarea>
						<label class="sr-only">Link</label>
						<input class="form-control details" type="url" id="link" name="link" pattern='^(http|https):\/\/[^ "]+.[a-z]{2}$' placeholder="Link" required>
						<label class="sr-only">Index</label>
						<select class="form-control details" id="index" name="index" required>
							<option value="">Index</option>
							<%_ docs.designs.forEach((design, i) => { _%>
							<option value="<%= i %>"><%= i %></option>
							<%_ }) _%>
							<option value="<%= docs.designs.length %>"><%= docs.designs.length %></option>
						</select>
						<input class="form-control submit" type="submit" value="Save">
					</form>

					<br><br><br>

					<form class="form-group design-delete-settings" method="post" action="/settings/design/delete">
						<label class="sr-only">Select to Delete</label>
						<select class="form-control details" id="gallery_to_delete" name="design_to_delete" required>
							<option value="">Select design</option>
							<%_ docs.designs.forEach(design => { _%>
							<option value="<%= design._id %>"><%= design.text.client %></option>
							<%_ }) _%>
							<option value="*">*</option>
						</select>
						<input class="form-control submit btn-danger" type="submit" value="Delete">
					</form>

					<br><br><br>

					<form class="form-group design-reorder-settings" method="post" action="/settings/design/reorder">
						<div class="row">
							<div class="col-sm-10 column sm">
								<label class="sr-only">Select to Re-order</label>
								<select class="form-control details" id="design_to_reorder" name="design_to_reorder" required>
									<option value="">Select design</option>
									<%_ docs.designs.forEach(design => { _%>
									<option value="<%= design._id %>"><%= design.text.client %></option>
									<%_ }) _%>
								</select>
							</div>
							<div class="col-sm-2 column sm">
								<label class="sr-only">Index</label>
								<select class="form-control details" id="index" name="index" required>
									<option value="">Index</option>
									<%_ docs.designs.forEach((design, i) => { _%>
									<option value="<%= i %>"><%= i %></option>
									<%_ }) _%>
								</select>
							</div>
						</div>
						<input class="form-control submit" type="submit" value="Re-order Design">
					</form>
				</div>
			</div>
		</div>
<%_ include partials/footer _%>
